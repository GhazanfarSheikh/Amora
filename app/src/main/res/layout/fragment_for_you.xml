<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Profile Icon -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile_placeholder"
            app:civ_border_color="@color/neon_green"
            app:civ_border_width="2dp" />

        <!-- Location Text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Area"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/plusjakartasans_regular" />

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M Bloc Space, South Jakarta"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/plusjakartasans_medium"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Filter Button -->
        <ImageButton
            android:id="@+id/filterButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_filter"
            android:contentDescription="Filter"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- Tab Layout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/dark_background"
        app:tabTextColor="@color/light_gray"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorColor="@color/neon_green"
        app:tabIndicatorHeight="3dp"
        app:tabMode="fixed"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For You (128)" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearby (64)" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Card Container -->
    <FrameLayout
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toTopOf="@id/actionButtonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- This will contain the swipeable cards -->
        <!-- In real implementation, use CardStackView here -->

        <!-- Sample Card (for demonstration) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/cardProfileImage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_profile"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/cardInfoContainer" />

                <!-- Info Container -->
                <LinearLayout
                    android:id="@+id/cardInfoContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_overlay"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Distance Badge -->
                    <TextView
                        android:id="@+id/distanceBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.2 km"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/plusjakartasans_medium"
                        android:background="@drawable/badge_background"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Match Percentage -->
                    <TextView
                        android:id="@+id/matchPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="98%"
                        android:textSize="14sp"
                        android:textColor="@color/neon_green"
                        android:fontFamily="@font/plusjakartasans_bold"
                        android:background="@drawable/match_badge_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_gravity="end"
                        android:layout_marginBottom="12dp" />

                    <!-- Name and Age -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/nameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jennifer Coppen"
                            android:textSize="24sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/plusjakartasans_bold" />

                        <TextView
                            android:id="@+id/verifiedBadge"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="âœ“"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:background="@drawable/verified_badge"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Bio Preview -->
                    <TextView
                        android:id="@+id/bioPreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I'm a passionate individual with a love for exploring new culture and cuisines."
                        android:textSize="14sp"
                        android:textColor="@color/light_gray"
                        android:fontFamily="@font/plusjakartasans_regular"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp" />

                    <!-- Interest Tags -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modeling"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/plusjakartasans_medium"
                            android:background="@drawable/chip_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hiking"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/plusjakartasans_medium"
                            android:background="@drawable/chip_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Photography"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/plusjakartasans_medium"
                            android:background="@drawable/chip_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/actionButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Like Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/likeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart"
            app:tint="@color/black"
            app:backgroundTint="@color/neon_green"
            app:fabSize="normal"
            android:contentDescription="Like"
            android:layout_marginEnd="16dp" />

        <!-- Message Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/messageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_message"
            app:tint="@color/white"
            app:backgroundTint="@color/dark_gray"
            app:fabSize="normal"
            android:contentDescription="Message" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>