<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/dark_background">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_profile"
                app:layout_collapseMode="parallax" />

            <!-- Gradient Overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_overlay" />

            <!-- Top Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/circular_button_background"
                    android:src="@drawable/ic_back"
                    android:contentDescription="Back"
                    app:tint="@color/white" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/moreButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/circular_button_background"
                    android:src="@drawable/ic_more"
                    android:contentDescription="More"
                    app:tint="@color/white" />

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Name, Age, Location -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/nameAgeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jade Walker, 24"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/plusjakartasans_bold" />

                <TextView
                    android:id="@+id/verifiedBadge"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="✓"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/verified_badge"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Location and Distance -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:id="@+id/locationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.7 km away"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/plusjakartasans_regular"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Match Percentage -->
            <TextView
                android:id="@+id/matchPercentageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="94%"
                android:textSize="16sp"
                android:textColor="@color/neon_green"
                android:fontFamily="@font/plusjakartasans_bold"
                android:background="@drawable/match_badge_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="16dp" />

            <!-- Voice Note Player -->
            <LinearLayout
                android:id="@+id/voiceNoteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/voice_note_background"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp">

                <ImageButton
                    android:id="@+id/playVoiceButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_button_background"
                    android:src="@drawable/ic_play"
                    android:contentDescription="Play voice note"
                    app:tint="@color/neon_green" />

                <!-- Waveform Placeholder -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_waveform"
                    android:scaleType="fitXY"
                    app:tint="@color/light_gray"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/voiceDurationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:30"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:fontFamily="@font/plusjakartasans_medium" />

            </LinearLayout>

            <!-- Bio Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bio"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/plusjakartasans_semibold"
                android:layout_marginTop="32dp" />

            <TextView
                android:id="@+id/bioTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drawn to quiet corners of the world and vibrant city life alike, Jade finds beauty in the unexpected. She believes moments are best remembered when felt deeply — whether it's a sketch on a napkin or a song at midnight."
                android:textSize="15sp"
                android:textColor="@color/light_gray"
                android:fontFamily="@font/plusjakartasans_regular"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="12dp" />

            <!-- Interests Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_interest"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/plusjakartasans_semibold"
                android:layout_marginTop="32dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/interestsChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipSpacing="8dp"
                android:layout_marginTop="12dp">

                <com.google.android.material.chip.Chip
                    style="@style/InterestChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actress" />

                <com.google.android.material.chip.Chip
                    style="@style/InterestChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modeling" />

                <com.google.android.material.chip.Chip
                    style="@style/InterestChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Art" />

                <com.google.android.material.chip.Chip
                    style="@style/InterestChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Traveling" />

                <com.google.android.material.chip.Chip
                    style="@style/InterestChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Music" />

                <com.google.android.material.chip.Chip
                    style="@style/InterestChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Painting" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Photos Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photos"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/plusjakartasans_semibold"
                android:layout_marginTop="32dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photosRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <!-- Bottom Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:padding="24dp"
        android:background="@drawable/bottom_gradient_overlay"
        android:gravity="center">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/likeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart"
            app:tint="@color/black"
            app:backgroundTint="@color/neon_green"
            app:fabSize="normal"
            android:contentDescription="Like"
            android:layout_marginEnd="16dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/messageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_message"
            app:tint="@color/white"
            app:backgroundTint="@color/dark_gray"
            app:fabSize="normal"
            android:contentDescription="Message" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>