

<?xml version="1.0" encoding="utf-8"?>
<!--
    item_profile_card.xml - Individual Profile Card Layout
    Used in: ProfileCardAdapter for the card swipe interface
-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Profile photo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_card_overlay" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sarah, 25"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:fontFamily="@font/plusjakartasans_bold"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <TextView
                android:id="@+id/bioText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Coffee enthusiast â˜• | Adventure seeker ðŸŒ"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/plusjakartasans_regular"
                android:maxLines="2"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/matchText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="94% Match"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/plusjakartasans_semibold"
                    android:background="@drawable/bg_match_badge"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp" />

                <TextView
                    android:id="@+id/distanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="3.2 km away"
                    android:textColor="@color/light_gray"
                    android:textSize="14sp"
                    android:fontFamily="@font/plusjakartasans_regular"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>