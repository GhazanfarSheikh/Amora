<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:padding="24dp">

    <!-- Top Logo -->
    <TextView
        android:id="@+id/amoraLogoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="amora"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:fontFamily="@font/plusjakartasans_bold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Large Decorative Shape (Simulating the Figma gradient) -->
    <View
        android:id="@+id/decorativeShape"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:background="@drawable/gradient_shape_background"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/amoraLogoText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Content Container -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title: "Find Real" -->
        <TextView
            android:id="@+id/titleLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_title_1"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:fontFamily="@font/plusjakartasans_bold"
            android:lineSpacingExtra="4dp" />

        <!-- Title: "Connections" with neon green color -->
        <TextView
            android:id="@+id/titleLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_title_2"
            android:textSize="40sp"
            android:textColor="@color/neon_green"
            android:fontFamily="@font/plusjakartasans_bold"
            android:lineSpacingExtra="4dp" />

        <!-- Title: "That Matter" -->
        <TextView
            android:id="@+id/titleLine3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_title_3"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:fontFamily="@font/plusjakartasans_bold"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Description Text -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_desc"
            android:textSize="16sp"
            android:textColor="@color/light_gray"
            android:fontFamily="@font/plusjakartasans_regular"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp" />

        <!-- Get Started Button -->
        <Button
            android:id="@+id/getStartedButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="@string/get_started"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/plusjakartasans_semibold"
            android:backgroundTint="@color/neon_green"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:textAllCaps="false"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="end"
            app:iconTint="@color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>